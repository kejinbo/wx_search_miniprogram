/**index.wxss**/
page {
  position: relative;
}

.container {
  padding-top: 16rpx;
}

.form-container {
  position: relative;
  top: -50px;
  opacity: 0;
}

.form-container input {
  border: none;
  outline: none;
  height: 90rpx;
  padding-left: 60rpx;
  border-radius: 10rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.input-placeholder {
  color: #fff;
  font-size: 32rpx;
}

/* 由于权重问题，直接操作 class 部分样式覆盖不了，提高权重即可 */
button.search-btn,
button.collect-btn {
  display: block;
  width: 100%;
  outline: none;
  border: none;
  height: 90rpx;
  border-radius: 10rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: rgba(7, 193, 96, .6);
  padding: 0;
}
button.collect-btn{
  height: 80rpx;
  line-height: 80rpx;
}

button.search-btn:not([size='mini']) {
  width: 100%;
}
button.collect-btn:not([size='mini']) {
  min-height: 20px;
}

button.search-btn-hover {
  background-color: rgba(7, 193, 96, .4);
}

.form-search-box {
  position: relative;
}

.search-icon {
  position: absolute;
  top: 50%;
  left: 10rpx;
  display: inline-block;
  height: 20px;
  transform: translateY(-50%);
}

.my-mp-icon-sytle.icon--weui-icon {
  vertical-align: top;
}

.scroll-view {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 60rpx 30rpx;
}

.list-box {
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.2);
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: relative;
  top: -50px;
  opacity: 0;
}

.scroll-box {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-radius: 10rpx;
  padding: 80rpx 20rpx 100rpx;
}

.scroll-box_header,
.scroll-box_foot {
  position: absolute;
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  z-index: 99;
}

.scroll-box_foot {
  bottom: 10rpx;
}

.scroll-box_header_container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}

.scroll-box_title {
  color: #fff;
  font-size: 28rpx;
}

.scroll-box_close {
  height: 20px;
}

.scroll-box_content__item {
  margin-bottom: 50rpx;
  border-radius: 10rpx;
}

.scroll-box_content__item:last-child {
  margin-bottom: 0;
}

.scroll-box_content__item view {
  padding: 12rpx 0;
  border-bottom: 1px dashed rgba(255, 255, 255, 0.4);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: baseline;
}

.scroll-box_content__item view text:first-child{
  width: 90rpx;
}
.scroll-box_content__item view text:last-child{
  flex: 1;
  color: #ffb65f;
}
.scroll-box_content__item.selected{
  background-color: #9e9e9e;
}

.no-more-info{
  font-size: 28rpx;
  color: #463d31;
  line-height: 45rpx;
  text-align: center;
}